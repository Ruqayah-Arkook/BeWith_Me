<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Set the color to white -->
    <corners android:radius="8dp" /> <!-- Set the radius to create rounded corners -->
    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" /> <!-- Adjust padding as needed -->

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="87%"
            android:pivotY="-50%">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- Set the color to match the background -->
            </shape>
        </rotate>
    </item>
</shape>