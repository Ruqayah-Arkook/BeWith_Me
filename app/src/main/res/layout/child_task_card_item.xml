<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/completeButton"
            android:layout_width="51dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:selectableItemBackground" />

        <TextView
            android:id="@+id/taskNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textSize="21sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/taskDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskImageView"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/taskImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskNameTextView"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/taskTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskDescriptionTextView"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/playVoiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskTimeTextView"
            android:theme="@style/Theme.Material3.Light"
            android:backgroundTint="@color/brown"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Play Voice"
            android:visibility="gone" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>
