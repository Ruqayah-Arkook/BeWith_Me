<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rgb"
    tools:context=".ReportGenerate">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Generate Your Child's Emotion Report !"
        android:textColor="#64131E"
        android:fontFamily="@font/amaranth"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        android:theme="@style/Theme.Material3.Light"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame_background">

            <ImageView
                android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/today_calendar" />
            <Button
                android:id="@+id/TodayReportPDFtButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="     Today's PDF Report"
                android:textColor="#000000"
                android:textSize="20dp" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        android:theme="@style/Theme.Material3.Light"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame_background">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:scaleType="fitCenter"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/week_calendar" />
            <Button
                android:id="@+id/WeeklyReportPDFtButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="     Weekly PDF Report"
                android:textColor="#000000"
                android:textSize="20dp" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/Theme.Material3.Light"
            android:background="@drawable/rounded_frame_background">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="43dp"
                android:scaleType="fitCenter"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/month_calendar" />
            <Button
                android:id="@+id/MonthlyReportPDFtButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="     Monthly PDF Report"
                android:textColor="#000000"
                android:textSize="20dp" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>


<!--    <Button-->
<!--        android:id="@+id/childEmotion"-->
<!--        android:layout_width="20dp"-->
<!--        android:layout_height="55dp"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="153dp"-->
<!--        android:text=" c"-->
<!--        android:textColor="@android:color/white" />-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNavigationView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_background"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:elevation="2dp"
        app:menu="@menu/navigationbar"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"/>

    <Button
        android:id="@+id/checkEmotions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/oval_button_background"
        android:backgroundTint="@color/brown"
        android:gravity="center"
        android:text="Check Emotions" />


</RelativeLayout>
