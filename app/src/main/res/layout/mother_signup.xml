<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mother_signup"
    android:orientation="vertical">

    <!-- Large Sign Up Text -->

    <!-- Name Input Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/amaranth"
        android:text="Sign Up!"
        android:textColor="#64131E"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="First Name"
        android:textSize="20sp" />

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <!-- Password Input Field -->
    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <!-- Gender Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:fontFamily="@font/amaranth"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="24dp" />

    <!-- Female Or Male Radio Button -->
    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <!-- Female Radio Button -->
        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="26dp"
            android:layout_marginStart="25dp"
            android:text="Female" />

        <!-- Male Radio Button -->
        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="Male" />
    </RadioGroup>

    <!-- Birthday Date Label -->

    <!-- Birthday Date Spinner -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amaranth"
        android:textColor="@color/black"
        android:text="Date Of Birth"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Day Spinner -->
        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <!-- Month Spinner -->
        <Spinner
            android:id="@+id/monthSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp" />

        <!-- Year Spinner -->
        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="39dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/Register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/oval_button_background"
        android:backgroundTint="@color/brown"
        android:textColor="@color/white"
        android:text="Create account" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-70dp"
        android:text="You have an account?"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Sign_in"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="60dp"
        android:backgroundTint="@color/brown"
        android:text="Sign in"
        android:textStyle="bold"
        android:textColor="@color/red"

        />
</LinearLayout>
