<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Material3.Light"
    android:background="@drawable/background_mainchilds"
    tools:context=".MainChildInterface" >

    <!-- First Frame for "Detect Emotion" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detectEmotionCardView"
        android:layout_width="300dp"
        android:layout_height="93dp"
        android:layout_below="@id/headerTextView"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame_background">

            <Button
                android:id="@+id/detectEmotionButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/indieflower"
                android:text="        Detect Your Emotion"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/detectEmotionGifImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="6dp"
                android:src="@drawable/detectemotion" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Second Frame for "Track Routine" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/trackRoutineCardView"
        android:layout_width="300dp"
        android:layout_height="93dp"
        android:layout_below="@id/detectEmotionCardView"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="25dp">

        <FrameLayout
            android:layout_width="351dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_frame_background">

            <Button
                android:id="@+id/trackRoutineButton"
                android:layout_width="349dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/indieflower"
                android:text="Track Your Routine"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/trackRoutineGifImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="6dp"
                android:src="@drawable/trackroutine" />
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose what do you want?"
        android:textColor="#64131E"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/indieflower"
        android:shadowColor="#FFFFFF"/>



</RelativeLayout>
